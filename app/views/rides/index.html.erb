<h1>Rides</h1>

<p><%= @count %></p>

<table border=3 cellpadding="5" cellspacing="3">

  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Time</th>
    <th>Location</th>
    <th>Driver Name</th>
    <th>View Request</th>
  </tr>

  <% @rides_list.each do |ride| %>
    <tr>
      <td><%= ride.id %></td>
      <td><%= ride.date %></td>
      <td><%= ride.time %></td>
      <td><%= ride.location %></td>
      <td><%= ride.driver.first_name + " " + ride.driver.last_name %></td>
      <td><%= link_to 'View Request', ride_ride_requests_path(ride)%></td>
    </tr>
  <% end %>

</table>   